generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  SUPER_ADMIN
  STUDENT
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  
  bio         String?
  phoneNumber String?
  address     String?
  
  attempts  TestAttempt[]
}

model Test {
  id          String   @id @default(cuid())
  title       String
  description String?
  duration    Int      // in minutes
  totalMarks  Int
  createdAt   DateTime @default(now())
  
  questions   Question[]
  attempts    TestAttempt[]
}

enum QuestionType {
  MCQ
  TRUE_FALSE
  FIB
  MATCHING
}

model Question {
  id            String       @id @default(cuid())
  testId        String
  question      String
  type          QuestionType @default(MCQ)
  marks         Int
  
  // For basic text match (FIB) or simple reference
  correctAnswer String?      
  explanation   String?

  options       Option[]
  
  test          Test         @relation(fields: [testId], references: [id], onDelete: Cascade)
  answers       Answer[]
}

model Option {
  id         String   @id @default(cuid())
  questionId String
  text       String   // The content of the option (or left side of match)
  matchText  String?  // The right side of match (for MATCHING type)
  isCorrect  Boolean  @default(false)
  
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}

model TestAttempt {
  id        String   @id @default(cuid())
  studentId String
  testId    String
  score     Int
  accuracy  Float
  createdAt DateTime @default(now())
  
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  test      Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  answers   Answer[]
}

model Answer {
  id             String   @id @default(cuid())
  attemptId      String
  questionId     String
  
  // Storing the answer. 
  // For MCQ/TF: Option ID or Text
  // For FIB: The typed text
  // For Matching: JSON string of pairs? or we can simplify for now.
  submittedValue String 
  
  isCorrect      Boolean
  
  attempt        TestAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question       Question    @relation(fields: [questionId], references: [id], onDelete: Cascade)
}
